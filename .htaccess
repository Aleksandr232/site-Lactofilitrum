RewriteEngine On

RewriteBase /

# Принудительное HTTPS
RewriteCond %{HTTPS} off
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Перенаправление на index.php для корневого URL
RewriteRule ^/?$ index.php [L]

# Перенаправление /admin на admin.php
RewriteRule ^admin/?$ admin.php [L]

# Перенаправление /podcasts на podcasts.php
RewriteRule ^podcasts/?$ podcasts.php [L]

# Перенаправление /remission на remission.php
RewriteRule ^remission/?$ remission.php [L]

# Перенаправление /login на login.php
RewriteRule ^login/?$ login.php [L]

# Страница подкаста по slug: /single/atopiya-bez-paniki
RewriteRule ^single/([a-z0-9\-]+)/?$ single.php?slug=$1 [L,QSA]