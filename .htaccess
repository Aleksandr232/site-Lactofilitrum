RewriteEngine On

RewriteBase /

# Принудительное HTTPS
RewriteCond %{HTTPS} off
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Перенаправление на index.html для корневого URL
RewriteRule ^/?$ index.html [L]

# Перенаправление /admin на admin.php
RewriteRule ^admin/?$ admin.php [L]

# Перенаправление /podcasts на podcasts.php
RewriteRule ^podcasts/?$ podcasts.php [L]

# Перенаправление /login на login.php
RewriteRule ^login/?$ login.php [L]