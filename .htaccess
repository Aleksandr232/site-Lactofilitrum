# Минимальные настройки для Timeweb

# Запрет доступа к конфиденциальным файлам
<Files "config.php">
    Order deny,allow
    Deny from all
</Files>

<Files "database.sql">
    Order deny,allow
    Deny from all
</Files>

# Разрешить доступ к тестовым файлам
<Files "test.php">
    Order deny,allow
    Allow from all
</Files>

<Files "db_test.php">
    Order deny,allow
    Allow from all
</Files>

# Обработка ошибок
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html